<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#FF9800
        </item> <!-- Primary dark theme color of the app (sets color of status bar) -->
        <item name="colorPrimaryDark">#FB8C00</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#FF9800</item>
    </style>

    <!-- Team names -->
    <style name="team_title_text">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Team Score -->
    <style name="team_score">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">56sp</item>
    </style>

    <!-- Button -->
    <style name="button">
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Vertical Divider -->
    <style name="vertical_divider">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>
</resources>
